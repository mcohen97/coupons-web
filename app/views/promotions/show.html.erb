<h1 class="section-title">Promotions</h1>
<%= render 'form', promotion: @promotion.becomes(Promotion), readonly: true %>
<% if @promotion.type == 'Coupon'%>
  <table>
    <tr>
      <th>Coupon Code</th>
      <th>Reedemed</th>
    </tr>
    <% @coupon_instances.each do |ci| %>
      <tr>
        <td><%= ci.coupon_code %></td>
        <td>
          <%if ci.redeemed%>
            yes
          <%else%>
            no
          <%end%>
        </td>
      </tr>
    <%end%>
  </table>
<% end%>

