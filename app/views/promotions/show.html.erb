<%= render 'form', promotion: @promotion, readonly: true %>
<% if @promotion.promotion_type == 'coupon'%>
  <div class = "table-container">
  <div class = "table-wrapper">
    <table class="fl-table">
      <thead>
        <tr>
          <th>Coupon Code</th>
          <th>Expiration date</th>
        </tr>
      </thead>
      <tbody>
        <% @coupon_instances.each do |ci| %>
          <tr>
            <td><%= ci.coupon_code %></td>
            <td><%=ci.expiration%></td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
  </div>
<% end%>

