
<%= form_with model: @coupon_instances, url: add_coupon_instances_path, method: :post, :html => { :onsubmit => "show_spiner()", class:"form-centered" }, local:true do |form| %>
  <h1><%=@form_title%></h1>

  <div class="form-group" style="text-align:left">
      <%= bootstrap_flash %>
  </div>

  <%= hidden_field_tag :coupon_code%>
  <div class="form-group">
    <%= label_tag :quantity, "Quantity" %>
    <%= number_field_tag :quantity, '1', min:1, max:10000, required: true%>
  </div>
  <div class="form-group">
    <%= label_tag :max_uses, "Maximum usages" %>
    <%= number_field_tag :max_uses, '1', min:1, max:10000, required: true%>
  </div>

  <div class="form-group">
    <%= label_tag :expiration, "Expiration date" %>
    <%= text_field_tag :expiration, "", class: 'datepicker', required: true%>
  </div>

  <div class="sk-folding-cube" id='spiner' style="display:none">
  <div class="sk-cube1 sk-cube"></div>
  <div class="sk-cube2 sk-cube"></div>
  <div class="sk-cube4 sk-cube"></div>
  <div class="sk-cube3 sk-cube"></div>  
  </div>
  <div class="actions">
      <div id = 'submit_form_container'>
       <%= form.submit "Create coupon instances", class: "btn btn-primary" %>
      </div>
  </div>

  <div style="display:block;margin:10px auto;width:fit-content" onclick='show_spiner();'><%= link_to 'Back', promotions_path %></div>

<% end %>