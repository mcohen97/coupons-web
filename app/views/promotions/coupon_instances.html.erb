
<%= form_with model: @coupon_instances, url: add_coupon_instances_path, method: :post, :html => { :onsubmit => "show_spiner()" }, local:true do |form| %>
  <h1><%=@form_title%></h1>

  <div class="form-group" style="text-align:left">
      <%= bootstrap_flash %>
  </div>

  <%= hidden_field_tag :coupon_code%>
  <div class="form-group">
    <%= text_field_tag :quantity%>
  </div>
  <div class="form-group">
    <%= text_field_tag :expiration, "", class: 'datepicker'%>
  </div>
  <div class="form-group">
    <%= number_field_tag :max_uses, '1', min:1, max:10000%>
  </div>

  <div class="sk-folding-cube" id='spiner' style="display:none">
  <div class="sk-cube1 sk-cube"></div>
  <div class="sk-cube2 sk-cube"></div>
  <div class="sk-cube4 sk-cube"></div>
  <div class="sk-cube3 sk-cube"></div>  
  </div>
  <div id = 'submit_form_container'>
    <div class="actions">
      <%= form.submit "Create coupon instances", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>