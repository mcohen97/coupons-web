<div class = "white-container">
<h1>Application Keys</h1>
<a class="btn btn-primary" style="padding: 3px; margin: 10px auto; display:block; width: 150px" href=<%=new_application_key_path%>>
  New Application Key
</a>

<div class = "table-wrapper">
  <table class="fl-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Promotions</th>
        <th>Token</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
    <% @application_keys.each do |application_key| %>
      <tr>
        <td><%= application_key.name %></td>
        <td><%= application_key.promotions.pluck(:name).join(', ') %></td>
        <td><%= application_key.generate_token %></td>
        <td class = "option" >
          <a class="w3-button" style="padding: 3px;" href=<%=application_key_path(application_key)%>>
            <img src=<%=asset_url('loupe.png')%> width='24px'>
          </a>
        </td>
        <td class = "option">
          <a class="w3-button" style="padding: 3px" href=<%=edit_application_key_path(application_key)%>>
            <img src=<%=asset_url('edit.png')%> width='24px'>
          </a>
        </td>
        <td class = "option"  >
          <a data-confirm="Are you sure?" class="w3-button" style="padding: 3px" rel="nofollow" data-method="delete" href=<%=application_key_path(application_key)%>>
            <img src=<%=asset_url('delete.png')%> width='24px'>
          </a>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>
<br>

</div>